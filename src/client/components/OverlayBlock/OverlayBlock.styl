@keyframes rotateSpinner
    to
        transform: rotate(360deg)

.overlay
    position: fixed
    top: 0
    left: 0
    z-index: 100501
    width: 100%
    height: 100vh
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    background-color: rgba(#fff, 0.95)
    opacity: 1
    visibility: visible
    transition: opacity 500ms ease-in-out, visibility 500ms ease-in-out

    &--hidden
        opacity: 0
        visibility: hidden

    &--title
        font-style: normal
        font-weight: 500
        font-size: 32px
        line-height: 39px
        margin-bottom: 24px
        user-select: none

    &--spinner
        position: relative

        &--icon
            width: 200px
            height: 200px
            position absolute
            top: 50%
            left: 50%
            transform: translateX(-50%) translateY(-50%)

            img
                width: 200px
                height: 200px
                transform: rotate(0deg)
                animation: rotateSpinner 1800ms linear infinite