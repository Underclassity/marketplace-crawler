.files
    display: flex
    align-items: flex-start
    justify-content: flex-start
    flex-wrap: wrap

.file
    margin: 6px
    width: calc(100% / 4 - 12px)
    position: relative

    img
        width: 100%
        display: block

    video
        width: 100%

    button
        background-color: #fafafa
        position: absolute
        bottom: 10px
        right: 10px