.users
    display: flex
    justify-content: stretch
    align-items: stretch
    flex-wrap: wrap

    &-item
        width: calc(100% / 5 - 20px)
        padding: 10px
        margin: 10px
        box-sizing: border-box
        border-radius: 4px
        border: 1px solid #ccc
        display: flex
        flex-direction: column
        align-items: flex-start
        justify-content: flex-start

.filters
    margin-bottom: 12px
    display: flex
    flex-wrap: wrap
    justify-content: flex-start
    align-items: flex-start

.filter-item
    padding: 8px
    border: 1px dashed #c3c3c3
    margin-right: 12px

    label
        margin-right: 8px
        margin-left: 8px

.pagination
    margin-top: 20px