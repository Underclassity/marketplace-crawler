.item
    width: calc(100% / 4 - 20px)
    text-align: left
    display: flex
    flex-direction: column
    margin: 10px
    text-decoration: none
    user-select: none

    &-images
        width: 100%
        height: 100%
        display: flex
        flex-wrap: wrap

    &-image
        width: calc(100% / 3)
        aspect-ratio: 1 / 1
        overflow: hidden
        position: relative

        img
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)

        &:before
            content: ""
            display: block
            padding-top: 100%
            float: left

    &-info
        margin-top: 12px
        display: flex
        flex-direction: column